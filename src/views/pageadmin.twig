{% if customdata.pageselect is defined %}
    <script>
        function list(value, name) {
            this.name = name;
            this.value = value;
        }
        $(document).ready(function() {
            $("#select_groups").change(function() {
                trigger = document.form_page.groups;
                target = document.form_page.page_key;
                target.options.length = 0;
                triggerSelected = trigger.options[trigger.selectedIndex].value;
                eval("childrenLength = children_" + triggerSelected + ".length;");
                for (var i=0;i<childrenLength;i++) {
                    eval("target.options[i] = new Option(children_" + triggerSelected + "[i].name, children_" + triggerSelected + "[i].value)");
                }
            });
        });
        {% for key, value in customdata.pageselect.tree %}
        var children_{{ key }} = new Array();
        {% set i = 0 %}
        {% for subvalue in value %}
        children_{{ key }}[{{ i }}]  = new list("{{ subvalue.cb_key }}", "{{ subvalue.cb_key }}");
        {% set i = i + 1 %}
        {% endfor %}
        {% endfor %}
    </script>
    <style>
        #select_groups, #select_page_key {height: 15.5em;}
    </style>
    <form action="{{ requesturi }}" method="get" name="form_page" class="pure-form pure-form-stacked">
        <input type="hidden" name="action" value="edit">
        <fieldset>
            <div class="pure-u-1-5">
                <label for="select_groups">Page group:</label>
                {{ macro.select('groups', customdata.pageselect.options_groups, '', 'select_groups', 'pure-u-1', false, 15) }}
            </div><div class="pure-u-4-5">
                <label for="select_page_key">Please choose page to edit:</label>
                {{ macro.select('page_key', ['|Please choose group'], '', 'select_page_key', 'pure-u-1', false, 15) }}
            </div>
        </fieldset>
        <button type="submit" class="pure-button pure-button-primary formfieldwithoutpadding">Weiter</button>
    </form>
    <p><a href="{{ requesturiarray.path }}?action=addpage">[Seite hinzufügen]</a></p>
{% endif %}
{% if customdata.page is defined %}
    <style type="text/css">
        #page_html{height: 20em;}
    </style>
    <form action="{{ requesturiarray.path }}?page_key={{ customdata.page.cb_key }}&action=edit" method="post" class="pure-form pure-form-stacked">
        <input type="hidden" name="action_a" value="true">
        <div class="small">
            <h3>current page: {{ customdata.page.cb_key }}</h3>
        </div>
    {% if customdata.updated is defined %}
    <p>Changes committed: {{ macro.showClienttime() }}</p>
    {% endif %}
    {% if customdata.page.oPayload is defined and customdata.page.oPayload.cl_id != NULL %}
    <fieldset>
        <legend>Sprachspezifisch</legend>
        <label for="page_html">Seiteninhalt <span tooltip="HTML Quelltext, unsichere Tags werden herausgefiltert." style="cursor: help;"><i class="fa fa-question-circle "></i></span></label>
        <textarea name="page_html" class="pure-u-1" id="page_html">{{ customdata.page.oPayload.cl_html }}</textarea>
        <label for="page_title">Seitentitel: <span tooltip="Reiner Text, erscheint im Browser als Titel der Seite.&#xa;Wenn dieses Feld leer gelassen wird, wird der&#xa;Standardseitentitel verwendet." style="cursor: help;"><i class="fa fa-question-circle "></i></span></label>
        <input type="text" name="page_title" id="page_title" value="{{ customdata.page.oPayload.cl_title }}" class="pure-u-1">
        <label for="page_description">Meta-Description: <span tooltip="Reiner Text, eine kurze Zusammenfassung der Seite." style="cursor: help;"><i class="fa fa-question-circle "></i></span></label>
        <input type="text" name="page_description" id="page_description" value="{{ customdata.page.oPayload.cl_description }}" class="pure-u-1">
        <label for="page_keywords">Meta-Keywords: <span tooltip="Reiner Text, Schlüsselwörter, durch die diese&#xa;Seite bei Suchmaschinen gefunden werden soll." style="cursor: help;"><i class="fa fa-question-circle "></i></span></label>
        <input type="text" name="page_keywords" id="page_keywords" value="{{ customdata.page.oPayload.cl_keywords }}" class="pure-u-1">
    </fieldset>
    {% else %}
    <p>
        <a class="pure-button button-green pure-u-1" href="{{ requesturiarray.path }}?page_key={{ customdata.page.cb_key }}&amp;action=insert_lang">In dieser Sprache sind noch keine Texte angelegt. Klicken Sie hier um dies zu tun</a>
    </p>
    {% endif %}
        <fieldset>
            <legend>Sprachunabhängig</legend>
            <label for="page_type">Page type: <span tooltip="Welche Seitenvorlage soll verwendet werden?&#xa;content: standardlayout&#xa;contentnosubnav: Standardlayout ohne Subnavigation&#xa;itemoverview: Artikelübersichtsseite&#xa;itemoverviewgrpd: Artikelübersichtsseite mit Gruppierung der Artikel&#xa;shorturl: Diese Seite soll den Besucher auf die in Page config angegebene Seite umleiten." style="cursor: help;"><i class="fa fa-question-circle "></i></span></label>
            {{ macro.select('page_type', customdata.admin_page_types, customdata.page.cb_pagetype, 'page_type', 'pure-u-1') }}
            <label for="page_group">Page group: <span tooltip="In welcher Kategorie soll diese Seite in der Seitenverwaltung gruppiert werden?" style="cursor: help;"><i class="fa fa-question-circle "></i></span></label>
            {{ macro.select('page_group', customdata.admin_page_groups, customdata.page.cb_group, 'page_group', 'pure-u-1') }}
            <label for="page_config">Page config: <span tooltip="Beim Seitentyp shorturl, hier das Ziel der Weiterleitung angeben, z.B.: http://www.haase-it.com/&#xa;Beim allen anderen Seitentypen ein valides JSON Objekt mit Seitenspezifischen Daten.&#xa;Beim Seitentyp itemoverview/itemoverviewgrpd hier den Artikelindex angeben:&#xa;{&#34;itemindex&#34;:&#34;A01&#34;} oder {&#34;itemindex&#34;:[&#34;A01&#34;, &#34;A02&#34;]}" style="cursor: help;"><i class="fa fa-question-circle "></i></span></label>
            <textarea name="page_config" class="pure-u-1" id="page_config">{{ customdata.page.cb_pageconfig }}</textarea>
            <label for="page_subnav">Page Subnavarea: <span tooltip="Welche Subnavigation soll auf dieser Seite eingeblendet werden?" style="cursor: help;"><i class="fa fa-question-circle "></i></span></label>
            {{ macro.select('page_subnav', customdata.subnavarea_options, customdata.page.cb_subnav, 'page_subnav', 'pure-u-1') }}
        </fieldset>
        <button type="submit" class="pure-button pure-button-primary formfieldwithoutpadding">Submit</button>
    </form>
    <p>
    <form action="/_admin/pageadmin.html?action=delete&amp;page_key={{ customdata.page.cb_key }}" method="post" name="deletepage" class="pure-form pure-form-stacked">
    <fieldset>
    <legend>Seite löschen</legend>
            <label for="page-delete-confirm" class="pure-checkbox">
            <input type="checkbox" name="delete" value="do" id="page-delete-confirm"> Ich möchte diese Seite in allen Sprachen löschen</label>
    <button type="submit" class="pure-button pure-button-primary pure-u-1-2">Löschen</button>

        </fieldset>
    </form>
    </p>
{% endif %}
{% if customdata.showaddform %}
    {{ customdata.err.reservedpath ? 'Der von Ihnen gewählte Schlüssel ist für das System reserviert, er darf nicht mit "/_" beginnen.<br><br>' : '' }}
    {{ customdata.err.keytooshort ? 'Bitte verwenden Sie mindestens 4 Zeichen für den Seitenschlüssel.<br><br>' : '' }}
    {{ customdata.err.keyalreadyinuse ? 'Dieser Seitenschlüssel ist bereits vergeben.<br><br>' : '' }}
    <form action="/_admin/pageadmin.html?action=addpage" method="POST" name="addpage" class="pure-form pure-form-stacked">
        <input type="hidden" name="addpage" value="do">
        <label for="pagekey">Seitenschlüssel: <span tooltip="Bitte geben Sie den kompletten Pfad an,&#xa;z.B.: /thema/artikel.html&#xa;Wenn als Dateiname index.html verwendet wird,&#xa;dann wird diese Seite automatisch geladen,&#xa;wenn beim Seitenaufruf nur ein Verzeichnis&#xa;angegeben wird, z.B.: /thema/" style="cursor: help;"><i class="fa fa-question-circle "></i></span></label>
        <input type="text" name="pagekey" value="{{ gFF("pagekey") }}" class="pure-u-1" id="pagekey">
        <button type="submit" class="pure-button pure-button-primary formfieldwithoutpadding">Anlegen</button>
    </form>
{% endif %}

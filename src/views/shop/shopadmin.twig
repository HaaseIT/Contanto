            <div class="pure-u-1">
                {{ HT('shopadmin_customerremarks') }}<br>
                <textarea readonly style="height: 150px;" class="pure-u-1">{{ customdata.orderdata.o_remarks }}</textarea>
            </div>
        {% endif %}
        </fieldset>
    </form>
